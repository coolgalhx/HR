<Window x:Class="HR_Management_System.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Management_System"
        mc:Ignorable="d"
        Title="Log In"
        Height="446"
        Width="685"
        WindowStartupLocation="CenterScreen"
        Background="#F3F6FB">

    <Grid>
        <Border Width="360"
                Padding="24"
                Background="White"
                CornerRadius="10"
                BorderBrush="#DDD"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="HR Management System"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Log in to continue"
                           FontSize="13"
                           Foreground="#6B7C93"
                           Margin="0,6,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Employee ID -->
                <TextBlock Text="Employee ID"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="txtemployeeidLIpg"
                         Height="34"
                         Margin="0,0,0,14"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="txtpassword"
                             Height="34"
                             Margin="0,0,0,20"/>

                <!-- Submit -->
                <Button x:Name="btnsubmit"
                        Content="Log In"
                        Height="38"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#2C98A0"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnSubmit_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>

