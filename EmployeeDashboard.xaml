<Window x:Class="HR_Management_System.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Employee Dashboard"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Employee Dashboard"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <Button x:Name="btnprofilepic"
                    Grid.Column="1"
                    Width="70"
                    Height="70"
                    Margin="10,0,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="/images.jpg"/>
                </Button.Background>
            </Button>
        </Grid>

        <!-- Search -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,12">
            <TextBox x:Name="txtgodash"
                     Width="250"
                     Height="32"
                     Margin="0,0,8,0"/>

            <Button Content="Search"
                    Width="90"
                    Height="32"
                    Click="Button_Click"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Personal Details -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Personal Details"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Employee ID"/>
                <TextBox x:Name="txtIDdash"/>

                <TextBlock Text="First Name" Margin="0,6,0,0"/>
                <TextBox x:Name="txtfirstnamedash"/>

                <TextBlock Text="Last Name" Margin="0,6,0,0"/>
                <TextBox x:Name="txtlastnamedash"/>

                <TextBlock Text="Date of Birth" Margin="0,6,0,0"/>
                <TextBox x:Name="txtDOBdash"/>

                <TextBlock Text="City" Margin="0,6,0,0"/>
                <TextBox x:Name="txtcitydash"/>

                <TextBlock Text="Address" Margin="0,6,0,0"/>
                <TextBox x:Name="txtaddress"/>

                <TextBlock Text="Contact Information" Margin="0,6,0,0"/>
                <TextBox x:Name="txtcontactinfodash"/>
            </StackPanel>

            <!-- Right Side Info -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Company Details"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Reports To"/>
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Height="80"
                        Margin="0,0,0,12"/>

                <TextBlock Text="Upcoming Leave"
                           FontWeight="Bold"
                           Margin="0,10,0,6"/>

                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Height="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

