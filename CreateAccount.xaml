<Window x:Class="HR_Management_System.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Management_System"
        mc:Ignorable="d"
        Title="CreateAccount" Height="450" Width="800">
    <Grid>
        
        <TextBox HorizontalAlignment="Left" Margin="84,149,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" Name="txtusernameAEpg"/>
        <TextBox HorizontalAlignment="Left" Margin="84,88,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120" Name="txtpasswordAEpg"/>
        <TextBox HorizontalAlignment="Left" Margin="84,212,0,0" TextWrapping="Wrap" Text="Role" VerticalAlignment="Top" Width="120" Name="txtrole"/>
        <Button Content="Enable" HorizontalAlignment="Left" Margin="292,113,0,0" VerticalAlignment="Top" Height="26" Width="176" Name="btnenable" Click="btnEnable_Click"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,258,0,0" AutoGenerateColumns="True" x:Name="datagridcreateaccount"/>

    </Grid>
</Window>
